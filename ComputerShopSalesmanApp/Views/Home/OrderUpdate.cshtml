@{
    ViewData["Title"] = "Update Order";
}
<div class="text-center">
    <h2 class="display-4">Изменение Заказа</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Наименование заказа:</div>
        <div class="col-8"><input type="text" name="orderName" id="orderName" value="@ViewBag.Order.OrderName" size="35" /></div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Привязанные партии товаров
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Order.OrderConsignments)
            {
                <tr>
                    <td>
                        @item.Value
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
        </div>
    </div>
</form>