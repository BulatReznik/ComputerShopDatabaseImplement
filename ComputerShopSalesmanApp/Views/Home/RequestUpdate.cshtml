@{
    ViewData["Title"] = "Update Request";
}
<div class="text-center">
    <h2 class="display-4">Изменение заявки</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Сумма пополнения:</div>
        <div class="col-8"><input type="text" name="requestName" id="requestName" value="@ViewBag.Request.Name" /></div>
    </div>
     <div class="row">
        <div class="col-4">Заказ:</div>
        <div class="col-8">
            <select id="orderId" name="orderId" class="form-control" asp-items="@(new SelectList(@ViewBag.Orders,"Id", "OrderName"))"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
        </div>
    </div>
</form>